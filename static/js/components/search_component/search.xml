<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="l-search">
        <div class="l-search-artist">
            <div class="m-obscure-title">
                <a href="/search/{data.input}">All results:</a>
            </div>
            <div class="small-line"></div>
            <div class="m-obscure-title">
                Artists:
            </div>
            <div class="small-line"></div>
            <fest:for iterate="data.artists" index="i" value="artist">
                <div class="row">
                    <div class="col">
                        <img class="m-medium-icon" src="{artist.image}" alt=""/>
                    </div>
                    <div class="">
                        <fest:value>artist.name</fest:value>
                    </div>
                </div>


            </fest:for>
        </div>
        <div class="l-search-tracks">
            <div class="m-obscure-title">
                Tracks:
            </div>
            <div class="small-line"></div>
            <fest:for iterate="data.tracks" index="i" value="track">
                <div class="row">
                    <div class="col">
                        <img class="m-medium-icon" src="{track.image}" alt=""/>
                    </div>
                    <div class="">
                        <fest:value>track.track_name</fest:value>
                    </div>
                </div>
            </fest:for>
        </div>
        <div class="l-search-album">
            <div class="m-obscure-title">
                Albums:
            </div>
            <div>
                <img class="m-medium-icon" src="static/img/icons/arrow-24px.svg" alt=""/>
            </div>
            <div class="small-line"></div>
            <fest:for iterate="data.albums" index="i" value="album">
                <div class="row">
                    <div class="col">
                        <img class="m-medium-icon" src="{album.image}" alt=""/>
                    </div>
                    <div class="">
                        <fest:value>album.album_name</fest:value>
                    </div>
                </div>
            </fest:for>
        </div>
    </div>
</fest:template>
