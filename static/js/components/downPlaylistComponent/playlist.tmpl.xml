<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <fest:if test="data.type">
        <div class="l-list-card">
            <div class="l-list-image">
                <img class="m-button-without-size" src="/static/img/icons/add.svg" alt=""/>
            </div>
            <div class="l-small-list">
                <div class="l-small-input">
                    <input type="text" placeholder="Create playlist" class="m-small-input"></input>
                </div>
            </div>
        </div>
    </fest:if>
    <fest:for iterate="data" index="i" value="elem">
        <div class="l-list-card" a-id="{elem.id}">
            <div class="l-list-image">
                <img class="m-list-image" src="{elem.image}" alt=""/>
            </div>
            <div class="l-button-play-track">
                <button class="m-button-track-play-playlist"> </button>
            </div>
            <a class="l-list-card-description" href="{data.href}{elem.id}">
                <fest:value>elem.name</fest:value>
            </a>
        </div>
    </fest:for>
</fest:template>
