<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="m-right-col">
        <div class="row" style="float: right">
            <div class="m-privacy-title col">Private playlist</div>
            <label class="m-switch col">
                <input type="checkbox" id="checkbox" checked="true" value="1"> </input>
                <span class="m-slider"> </span>
            </label>
        </div>
        <div class="row">
            <div class="m-more-dropdown col">
                <div class="row">
                    <div class="col">
                        <button class="m-more-dropdown-button" id="playlist-share-button">
                            <img src="/static/img/icons/link.svg"/>
                            <span class="m-text-in-button">copy link</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col">
                <button class="m-button-share"></button>
            </div>
        </div>
        <div class="l-delete-playlist-button" id="playlist-delete-button">
            <div class="m-delete-playlist-button"></div>
        </div>
    </div>
</fest:template>
