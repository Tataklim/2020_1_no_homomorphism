<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <img class="m-top-right-angle m-more-button" src="/static/img/icons/more_horiz.svg"/>
    <div class="m-top-right-angle m-more-dropdown">
        <div class="row">
            <div class="col">
                <div class="m-privacy-title">private playlist</div>
                <label class="m-switch">
                    <input type="checkbox" id="checkbox" checked="true" value="1"> </input>
                    <span class="m-slider"> </span>
                </label>
            </div>
        </div>
        <div class="small-line"></div>
        <div class="row">
            <div class="col">
                <button class="m-button-share" id="playlist-share-button">
                    <img src="/static/img/icons/share.svg"/>
                    <span class="m-text-in-button">copy link</span>
                </button>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <button class="m-button-share" id="playlist-delete-button">
                    <img src="/static/img/icons/delete-24px.svg"/>
                    <span class="m-text-in-button">delete playlist</span>
                </button>
            </div>
        </div>
    </div>
</fest:template>
