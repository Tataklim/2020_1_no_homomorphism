<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <fest:for iterate="data" index="i" value="track">
        <div class="row border-bottom" id="{track.id}">
            <div class="m-track-photo">
                <img src="{track.image}" height="50px" width="50px" alt="..."/>
            </div>
            <div class="m-track-group-names">
                <div class="track-name" title="{track.name}">
                    <fest:value>track.name</fest:value>
                </div>
                <a class="m-obscure-title m-tiny-ref m-small-text is-underlined-ref" href="/artist/{track.artist_id}">
                    <fest:value>track.artist</fest:value>
                </a>
            </div>
            <div class="l-player-track-buttons">
                <div class="l-big-track-button delete-button">
                    <img src="/static/img/icons/clear.svg" class="m-big-delete-button" height="15px" alt="..."/>
                </div>
<!--                <div class="l-big-track-button favorite-button">-->
<!--                    <img src="/static/img/icons/favorite_border.svg" class="m-big-like-button" height="15px" alt="..."/>-->
<!--                </div>-->
<!--                <div class="l-big-track-button add-button">-->
<!--                    <img src="/static/img/icons/add.svg" class="m-big-add-button" height="15px" alt="..."/>-->
<!--                </div>-->
                <div class="l-big-track-button more-button">
                    <img src="/static/img/icons/more_vert.svg" class="m-big-more-button" height="15px" alt="..."/>
                </div>
            </div>
            <div class="m-top-right-corner m-more-dropdown m-mobile-only">
                <div class="row">
                    <div class="col">
                        <button class="m-more-dropdown-button delete-button">
                            <img src="/static/img/icons/clear.svg"/>
                            <span class="m-text-in-button">remove</span>
                        </button>
                    </div>
                </div>
                <!-- <div class="row">
                    <div class="col">
                        <button class="m-more-dropdown-button like-button">
                            <fest:if test="!track.is_liked">
                                <img src="/static/img/icons/favorite_border.svg"/>
                            </fest:if>
                            <fest:if test="track.is_liked">
                                <img src="/static/img/icons/favorite.svg"/>
                            </fest:if>
                            <span class="m-text-in-button">like</span>
                        </button>
                    </div>
                </div> -->
