<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="col col-9">
        <div class="l-main">
            <div class="l-top-card row">
                <div class="l-top-info col">
                    <div class="l-round-image col">
                        <img alt="" src="{data.image}" class="m-rounded-image" id="avatar"/>
                    </div>
                    <div class="col">
                        <button class="m-button-track-list-play"> </button>
                    </div>
                    <div class="l-top-name col">
                        <div class="m-big-name">
                        </div>
                    </div>
                </div>

                <div class="m-right-col">
                    <div class="l-delete-playlist-button">
                        <div class="m-delete-playlist-button"> </div>
                    </div>
                    <div class="m-tracks-amount ">
                        <div>Amount of tracks: 0 </div>
                    </div>
                </div>



            </div>
            <div class="l-down-card">
                <div class="l-track-list" style="top: 0;">
                    <div class="m-empty-list">
                        Playlist is empty :(
                    </div>
                </div>
            </div>
        </div>
    </div>
</fest:template>
