<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="col-9">
        <div class="l-main">
            <div class="l-top-card row">
                <div class="l-top-info col">
                    <div class="l-round-image col">
                        <label class="is-not-displayed">
                            <img alt="" src="{data.image}" class="m-rounded-image m-scale-image" id="image"
                                 title="{data.lang.playlist.changeImage}"/>
                            <input class="m-hidden-input" type="file" id="image-upload"/>
                        </label>
                        <div class="m-error-message-small" id="image-error" style="padding-left: 32px"> </div>
                        <img alt="" src="{data.image}" class="m-rounded-image" id="image"/>
                    </div>
                    <div class="l-top-name col playlist">
                        <div class="m-big-name"></div>
                        <input class="m-big-name is-not-displayed"></input>
                    </div>
                </div>
                <div class="l-play-button-col">
                    <div class="l-button-middle-play">
                        <button class="m-button-middle-play"> </button>
                        <div class="m-tracks-amount">0 tracks</div>
                    </div>
                </div>
            </div>
            <div class="l-down-card">
                <div class="l-track-list" style="top: 0;">
                    <div class="m-empty-list">
                        <fest:value>data.lang.playlist.empty</fest:value>
                    </div>
                </div>
            </div>
        </div>
    </div>
</fest:template>
