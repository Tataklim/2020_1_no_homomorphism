<fest:template xmlns:fest="http://fest.mail.ru" context_name="track">
    <div class="row border-bottom" id="{track.id}">
        <div class="col">
            <div class="track-photo">
                <img src="{track.image}" height="50px" width="50px" alt="..."/>
            </div>
        </div>
        <div class="col track-group-names">
            <div class="track-name" title="{track.name}">
                <fest:value>track.name</fest:value>
            </div>
            <a class="m-obscure-title m-tiny-ref" href="/artist/{track.artist_id}">
                <fest:value>track.artist</fest:value>
            </a>
        </div>
<!--        <div class="col track-buttons">-->
<!--            <div class="row track-button delete-button">-->
<!--                <img src="/static/img/clear.svg" class="delete-button" height="15px" alt="..."/>-->
<!--            </div>-->
<!--            <div class="row track-button favorite-button">-->
<!--                <img src="/static/img/favorite_border.svg" class="like-button" height="15px" alt="..."/>-->
<!--            </div>-->
<!--            <div class="row track-button add-button">-->
<!--                <img src="/static/img/add.svg" class="add-button" height="15px" alt="..."/>-->
<!--            </div>-->
<!--        </div>-->
        <div class="l-track-buttons row" >
            <div class="col l-big-track-button delete-button" style="padding-top:10px">
                <img src="/static/img/clear.svg" class="m-big-delete-button" height="15px" alt="..."/>
            </div>

            <div class="col l-big-track-button favorite-button" style="padding-top:10px">
                <img src="/static/img/favorite_border.svg" class="m-big-like-button" height="15px" alt="..."/>
            </div>
            <div class="col l-big-track-button add-button" style="padding-top:10px">
                <img src="/static/img/add.svg" class="m-big-add-button" height="15px" alt="..."/>
            </div>
        </div>
    </div>
</fest:template>
