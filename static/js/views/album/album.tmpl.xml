<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="col col-9">
        <div class="l-main">
            <div class="l-top-card row">
                <div class="l-top-info col">
                    <div class="l-round-image col">
                        <img alt="" src="{data.image}" class="m-rounded-image" id="avatar"/>
                    </div>
                    <div class="l-top-name col">
                        <div class="m-big-name">
                        </div>
                    </div>
                </div>
                <div class="l-play-button-col col album">
                    <div class="l-button-middle-play">
                        <button class="m-button-middle-play"> </button>
                        <div class="m-tracks-amount">0 tracks</div>
                    </div>
                </div>
                <div class="m-right-col-bottom">
                    <div class="col">
                        <div class="m-large-like-button is-not-liked" title="Like album"> </div>
                    </div>
                </div>
            </div>
            <div class="l-down-card">
                <div class="l-track-list">
                    <div class="m-empty-list">
                        Album is empty :(
                    </div>
                </div>
            </div>
        </div>
    </div>
</fest:template>
