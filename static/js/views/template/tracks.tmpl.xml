<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="small-line"></div>
    <fest:for iterate="data" index="i" value="track">
        <div class="l-track-big" a-id="{track.id}">
            <div class="m-track row" style="text-align: left">
                <div>
                    <div class="l-track-big-image">
                        <img class="m-track-image" src="{track.image}" alt=""/>
                    </div>
                    <div class="m-play-track">
                        <button class="m-button-track-play" id="playlist-play"> </button>
                    </div>
                    <div class="m-track-name ">
                        <span>
                            <fest:value>track.name</fest:value>
                        </span>
                    </div>
                </div>
                <div class="l-track-buttons row">
                    <div class="col l-big-track-button delete-button">
                        <img src="/static/img/clear.svg" class="m-big-delete-button" height="15px" alt="..."/>
                    </div>
                    <div class="col l-big-track-button favorite-button">
                        <img src="/static/img/favorite_border.svg" class="m-big-like-button" height="15px" alt="..."/>
                    </div>
                    <div class="col l-big-track-button add-button">
                        <img src="/static/img/add.svg" class="m-big-add-button" height="15px" alt="..."/>
                    </div>
                </div>
            </div>
        </div>
        <div class="small-line"> </div>
    </fest:for>
</fest:template>
