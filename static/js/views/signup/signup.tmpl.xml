<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="is-emphasized l-center-pos row">
        <div class="col-4">
            <form class="l-form l-card" onsubmit="return false;" autocomplete="none">
                <h2>
                    <fest:value>data.lang.signup.caption</fest:value>
                </h2>
                <div class="m-form-input">
                    <label>
                        <fest:value>data.lang.signup.name</fest:value>
                        <input class="m-big-input" id="name" type="text" value="" placeholder="John Smith" use="required"/>
                        <div class="m-error-message-small"></div>
                    </label>
                </div>
                <div class="m-form-input">
                    <label>
                        <fest:value>data.lang.signup.login</fest:value>
                        <input class="m-big-input" id="login" type="text" value="" placeholder="john99" use="required"/>
                        <div class="m-error-message-small"></div>
                    </label>
                </div>
                <div class="m-form-input">
                    <label>
                        <fest:value>data.lang.signup.email</fest:value>
                        <input class="m-big-input" type="text" id="email" value="" placeholder="johnSmith@mail.ru"
                               use="required"/>
                        <div class="m-error-message-small"></div>
                    </label>
                </div>
                <div class="m-form-input">
                    <label>
                        <fest:value>data.lang.signup.password</fest:value>
                        <input class="m-big-input" type="password" id="password" value="" use="required"/>
                        <div class="m-error-message-small"></div>
                    </label>
                </div>
                <div class="m-form-input">
                    <label>
                        <fest:value>data.lang.signup.passwordConfirmation</fest:value>
                        <input class="m-big-input" type="password" id="password-confirm" value="" use="required"/>
                        <div class="m-error-message-small"></div>
                    </label>
                </div>
                <button class="m-submit-button" type="submit" id="signup-submit">
                    <fest:value>data.lang.signup.go</fest:value>
                </button>
                <div class="m-error-message-small" id="global">
                </div>
                <div class="m-form-description">
                    <a class="m-tiny-ref" href="/login">
                        <fest:value>data.lang.signup.alreadyRegistered</fest:value>
                    </a>
                </div>
            </form>

        </div>
    </div>
</fest:template>
