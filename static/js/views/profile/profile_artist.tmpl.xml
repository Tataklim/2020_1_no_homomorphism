<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <fest:for iterate="data" index="i" value="artist">
        <div class="l-list-card">
            <div class="l-list-image">
                <img class="m-list-image" src="{artist.image}" alt=""/>
            </div>
            <div>
                <button class="m-button-track-play-playlist"></button>
            </div>
            <div class="l-list-card-description">
                <fest:value>artist.name</fest:value>
            </div>
        </div>
    </fest:for>
</fest:template>