<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="l-profile-playlists">
        <div class="l-profile-playlist-image" >
            <img class="m-profile-playlist-image" id="profile-playlist-image" src="{data.image}"  alt=""/>
        </div>
        <div>
            <button class="m-profile-button-play-playlist"></button>
        </div>
        <div class="l-profile-playlists-description">
            <fest:value>data.name</fest:value>
        </div>
    </div>
</fest:template>