<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="col col-9">
        <div class="l-main">
            <div class="l-top-card ">
                <div class="l-medium-image"> </div>
                <div class="l-profile-top-info row">
                    <div class="col col-5">
                        <div class="l-profile-avatar col col-4">
                            <img alt="" src="{data.image}" class="m-profile-avatar" id="avatar"/>
                        </div>
                        <div class="l-profile-login-name col col-7" id="login-name">
                            <div class="m-profile-login" id="profile-login">
                                <fest:value>data.login</fest:value>
                            </div>
                            <div class="m-profile-name" id="profile-name">
                                <fest:value>data.name</fest:value>
                            </div>
                        </div>
                    </div>

                    <div class="l-profile-titles col col-6" id="profile-music-titles">
                        <div class="m-profile-tracks col col-3" id="profile-tracks-title">
                            <a class="m-profile-tiny-ref" href="/profile/tracks">
                                <h2>543</h2>
                                <p>Tracks</p>
                            </a>
                        </div>
                        <div class="m-profile-playlists col col-3" id="profile-playlists-title">
                            <a class="m-profile-tiny-ref" href="/profile/playlists">
                                <h2>53</h2>
                                <p>Playlists</p>
                            </a>
                        </div>
                        <div class="m-profile-albums col col-3" id="profile-albums-title">
                            <a class="m-profile-tiny-ref" href="/profile/albums">
                                <h2>43</h2>
                                <p>Albums</p>
                            </a>
                        </div>
                        <div class="m-profile-artists col col-3" id="profile-artists-title">
                            <a class="m-profile-tiny-ref" href="/profile/artists">
                                <h2>53</h2>
                                <p>Subscriptions</p>
                            </a>
                        </div>
                    </div>
                </div>

            </div>

            <div class="l-down-card">
                <div class="l-profile-album-list" id="profile-album-playlist-list" style="top: 0;">
                </div>
                <div class="l-profile-track-list" id="profile-track-list" style="top: 0;">
                </div>
                <div class="l-profile-playlist-list" id="profile-playlist-list" style="top: 0;">
                </div>
                <div class="l-profile-artist-list" id="profile-artist-list" style="top: 0;">
                </div>
            </div>
        </div>
    </div>
</fest:template>