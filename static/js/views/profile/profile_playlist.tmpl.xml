<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <fest:for iterate="data" index="i" value="playlist">
        <div class="l-profile-playlists">
            <div class="l-profile-playlist-image">
                <img class="m-profile-playlist-image" id="profile-playlist-image" src="{playlist.image}" alt=""/>
            </div>
            <div>
                <button class="m-button-track-play-playlist"></button>
            </div>

            <div class="l-profile-playlists-description">
                <fest:value>playlist.name</fest:value>
            </div>
        </div>
    </fest:for>
</fest:template>