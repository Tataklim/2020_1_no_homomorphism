<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="row">
        <div class="col col-1"></div>
        <div class="col col-7">
            <fest:for from="1" to="5" index="i">
                <div class="post card">
                    <div class="row name-row">
                        <div class="col col-1">
                            <img src="/static/img/HU.jpeg" alt="avatar" class="avatar">
                            </img>
                        </div>
                        <div class="col col-11">
                            <div class="artist">Hollywood Undead</div>
                            <div class="date">14 февраля 2020</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-1"></div>
                        <div class="col col-11">
                            <div class="text">добавили новый альбом</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="release-description">
                                <img src="/static/img/new_empire_vol1.jpg" alt="cover" class="release-image">
                                </img>
                                <div class="release-name">New Empire Vol. 1</div>
                            </div>
                        </div>
                    </div>
                </div>
            </fest:for>
        </div>
        <div class="col col-4"></div>
    </div>
</fest:template>