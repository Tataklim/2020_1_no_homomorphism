<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="col col-9">
        <div class="l-main">


            <div class="l-top-card">

                <div class="l-round-image col">
                    <label class="label">
                        <i class="material-icons"></i>
                        <img alt="" src="{data.image}" class=" m-round-image" id="avatar"
                             title="Add new image"/>
                        <input class="m-hidden-input" type="file" id="avatar-upload"/>
                    </label>
                    <div class="error-message-small"></div>
                </div>


                <div class="l-top-name col" id="login-name">
                    <div class="m-top-login" id="profile-login">
                        <fest:value>data.login</fest:value>
                    </div>
                    <div class="m-top-name" id="profile-name">
                        <fest:value>data.name</fest:value>
                    </div>
                </div>


            </div>

            <div class="l-down-card l-profile-base col">

                <div class="col col-6">
                    <div class="col col-9">
                        <span class="profile-info">Name</span>
                        <div class="l-input">
                            <label for="login">
                                <input type="text" class="m-settings-input" id="name"/>
                                <div class="error-message-small"></div>
                            </label>
                        </div>
                    </div>
                    <div class="col col-9">
                        <span class="profile-info">Email</span>
                        <div class="l-input">
                            <label for="email">
                                <input type="text" class=" m-settings-input" id="email"
                                       value="{data.email} "
                                       autocomplete="off"/>
                                <div class="error-message-small"></div>
                            </label>
                        </div>
                    </div>
                    <div class="col col-3">
                        <button type="submit" id="submit-setting-changes-data">
                            Save
                        </button>
                    </div>
                </div>

                <div class="col col-6">
                    <div class="col col-9">
                        <div class="l-input">
                            <span class="profile-info">New password</span>
                            <label for="newPassword">
                                <input type="password"  class="profile-content m-settings-input" id="newPassword" value=""
                                       autocomplete="off"/>
                                <div class="error-message-small"></div>
                            </label>
                        </div>
                    </div>
                    <div class="col col-9">
                        <div class="l-input">
                            <span class="profile-info">Repeat password</span>
                            <label for="newPasswordConfirm">
                                <input type="password"  class="profile-content m-settings-input" id="newPasswordConfirm"
                                       autocomplete="off"/>
                                <div class="error-message-small"></div>
                            </label>
                        </div>
                    </div>

                    <div class="col col-9">
                        <div class="l-input">
                            <span class="profile-info">Old password</span>
                            <label for="password">
                                <input type="password"  class="profile-content m-settings-input" id="password" placeholder=""
                                       autocomplete="off"/>
                                <div class="error-message-small"></div>
                            </label>
                        </div>
                    </div>
                    <div class="col col-3">
                        <button type="submit" id="submit-setting-changes-pass">
                            Change
                        </button>
                    </div>
                </div>
            </div>

            <!--            <div class="l-down-card l-profile-base col col-6">-->

            <!--            </div>-->
        </div>

    </div>
</fest:template>