<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="l-profile-settings col col-9">
        <div class="l-profile-top">
            <div class="l-profile-top-image"></div>
            <div class="l-profile-top-info row">
                <div class="col col-5">
                    <div class="l-profile-avatar-settings col col-4">
                        <label class="label">
                            <i class="material-icons"></i>
                            <img alt="" src="{data.image}" class=" m-round-image" id="avatar"
                                 title="Add new image"/>
                            <input type="file" id="avatar-upload"/>
                            <span class="error-message-small"></span>
                        </label>
                    </div>
                    <div class="l-top-name col col-7" id="login-name">
                        <div class="m-top-login" id="profile-login">
                            <fest:value> data.login</fest:value>
                        </div>
                        <div class="m-top-name" id="profile-name">
                            <fest:value> data.name</fest:value>
                        </div>
                    </div>
                </div>

                <div class="l-top-titles col col-6">
                    <div class="m-profile-music col col-3" id="profile-tracks-title">
                        <h2>543</h2>
                        <p>Tracks</p>
                    </div>
                    <div class="m-profile-albums col col-3" id="profile-albums-title">
                        <h2>43</h2>
                        <p>Albums</p>
                    </div>
                    <div class="m-profile-playlists col col-3" id="profile-playlists-title">
                        <h2>53</h2>
                        <p>Playlists</p>
                    </div>
                    <div class="m-profile-subscriptions col col-3" id="profile-subscriptions-title">
                        <h2>53</h2>
                        <p>Subscriptions</p>
                    </div>
                </div>

            </div>

        </div>
        <div class="col col-4"></div>
        <div class="l-profile-settings-data col col-6">

            <div class="col col-9 m-tag-settings">
                <span class="profile-info"> Name</span>
                <label for="name">
                    <input type="text" class="profile-content m-settings-input" id="name" value="{data.name}"
                           autocomplete="off"/>
                    <span class="error-message-small"></span>
                </label>
            </div>

            <div class="col col-9 m-tag-settings">
                <span class="profile-info"> Email</span>
                <label for="email">
                    <input type="text" class="profile-content m-settings-input" id="email" value="{data.email} "
                           autocomplete="off"/>
                    <div class="error-message-small"></div>
                </label>
            </div>
            <div class="col col-3">
                <button type="submit" id="submit-setting-changes-data">
                    Save
                </button>
            </div>
        </div>
        <div class="l-profile-settings-pass col col-6">
            <div class="col col-9">
                <div class="m-tag-settings">
                    <span class="profile-info"> New password</span>
                    <label for="newPassword">
                        <input type="text" class="profile-content m-settings-input" id="newPassword" value=""
                               autocomplete="off"/>
                    </label>
                    <div class="error-message-small"></div>
                </div>
            </div>
            <div class="col col-9">
                <div class="m-tag-settings">
                    <span class="profile-info"> Repeat password</span>
                    <label for="newPasswordConfirm">
                        <input type="text" class="profile-content m-settings-input" id="newPasswordConfirm"
                               autocomplete="off"/>
                    </label>
                    <div class="error-message-small"></div>
                </div>
            </div>
            <div class="col col-3"></div>
            <div class="col col-9 m-tag-settings">
                <span class="profile-info"> Old password</span>
                <label for="password">
                    <input type="text" class="profile-content m-settings-input" id="password" placeholder=""
                           autocomplete="off"/>
                </label>
                <div class="error-message-small"></div>
            </div>
            <div class="col col-3">
                <button type="submit" id="submit-setting-changes-pass">
                    Change
                </button>
            </div>
        </div>
    </div>

    <div class="col col-4"></div>
</fest:template>