<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="col col-9">
        <div class="l-main ">
            <div class="l-top-card">
                <div class="row">
                    <div class="l-top-info col">
                        <div class="l-round-image col">
                            <img alt="" src="{data.image}" class=" m-round-image" id="avatar"/>
                        </div>
                        <div class="l-top-name col">
                            <div class="m-top-login" id="profile-login">
                                <fest:value>data.name</fest:value>
                            </div>
                            <div class="m-top-name" id="profile-name">
                                <fest:value>data.genre</fest:value>
                            </div>
                        </div>
                        <div class="l-button-middle-play artist">
                            <button class="m-button-middle-play"> </button>
                            <!-- <div class="m-tracks-amount">0 tracks</div> -->
                        </div>
                    </div>
                    <div class="m-right-col">
                        <div class="col">
                            <div class="m-subscribe">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="l-top-section-tracks col col-4" id="profile-tracks-title">
                        <a class="m-tiny-ref m-top-section-tracks-ref" href="/artist/{data.id}/tracks">
                            <h2 id="artist-tracks-title">
                                <fest:value>data.tracks</fest:value>
                            </h2>
                            <p>Tracks</p>
                        </a>
                    </div>
                    <div class="l-top-section-albums col col-4" id="profile-albums-title">
                        <a class="m-tiny-ref m-top-section-albums-ref" href="/artist/{data.id}/albums">
                            <h2 id="artist-albums-title">
                                <fest:value>data.albums</fest:value>
                            </h2>
                            <p>Albums</p>
                        </a>
                    </div>
                    <div class="l-top-section-info col col-4" id="profile-info-title">
                        <a class="m-tiny-ref l-top-section-info-ref" href="/artist/{data.id}/info">
                            <h2>Info</h2>
                        </a>
                    </div>
                </div>
            </div>
            <div class="l-down-card">
                <div class="l-track-list" id="artist-albums">
                </div>
            </div>
        </div>
    </div>
</fest:template>
