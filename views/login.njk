{% block content %}
<div class="row">
    <div class="col col-4"></div>
    <div class="col col-4">
        <form class="login-form card" method="post">
            <h2>LOG IN</h2>
            <label>
                Login
                <input type="text" id="login" required>
                <div class="error-message-small"></div>
            </label>
            <label>
                Password
                <input type="password" id="password" required>
                <div class="error-message-small"></div>
            </label>
            <div class="col col-6">
                <!--label>
                    <input type="checkbox" id="remember">
                    Remember
                </label-->
            </div>
            <button class="button" type="submit" id="submit-login">
                Go
            </button>
	        <div class="error-message">
                Login failed
            </div>
        </form>
        <div class="div-center">
            <a class="tiny-ref" href="/signup">
                No account? Sign up.
            </a>
        </div>
    </div>
    <div class="col col-4"></div>
</div>
{% endblock %}
