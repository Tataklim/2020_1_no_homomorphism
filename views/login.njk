{% block content %}
<div class="row">
    <div class="col col-4"></div>
    <div class="col col-4">
        <form class="login-form card" method="post">
            <h2>Вход</h2>
            <label>
                логин
                <input type="text" id="login" required>
            </label>
            <label>
                пароль
                <input type="password" id="password" required>
            </label>
            <div class="col col-6">
                <!--label>
                    <input type="checkbox" id="remember">
                    запомнить
                </label-->
            </div>
            <div class="col col-6">
                <button class="button" type="submit" id="submit-login">
                    Войти
                </button>
            </div>
        </form>
        <div class="div-center">
            <a class="tiny-ref" href="/signup">
                Нет аккаунта? Зарегистируйтесь.
            </a>
        </div>
    </div>
    <div class="col col-4"></div>
</div>
{% endblock %}
