{% extends "base.njk" %}

{% block additional_css %}
<link rel="stylesheet" href="/css/profile.css">
{% endblock %}

{% block content %}
<div class="row profile">
    <div class="col col-1"></div>
    <div class="col col-7">
        <div class="row">
            <div class="col col-4">
                <img alt="avatar" src="/img/new_empire_vol1.jpg" class="avatar" id="avatar">
                <div class="row">
                    <input type="file" id="avatar-upload">
                </div>
            </div>
            <div class="info col col-8">
                <div class="nickname row">
                    Митрофанов
                </div>
                <div calss="birthday row">
                    <div class="profile-info col col-3">
                        День рождения:
                    </div>
                    <input type=date class="profile-content col col-9" id="birthday" value="2001-02-18">
                </div>
                <div calss="name row">
                    <div class="profile-info col col-3">
                        ФИО:
                    </div>
                    <input type=text class="profile-content col col-9" id="name" value="Дмитрий Алексеевич Левен">
                </div>
                <div calss="email row">
                    <div class="profile-info col col-3">
                        e-mail:
                    </div>
                    <input type="email" class="profile-content col col-9" id="email" value="leven@dima.go">
                </div>
                <div calss="row">
                    <div class="profile-info col col-3">
                        Пароль:
                    </div>
                    <input type=password class="profile-content col col-9" id="password" placeholder="Новый пароль">
                </div>
                <div class="row">
                    <div class="profile-info col col-3"></div>
                    <input type=password class="profile-content col col-9" id="password-confirm" placeholder="Повторите пароль">
                </div>
                <div class="row">
                    <div class="col accounts-edit">
                        <div class="row">
                            <a href="#" class="col col-3">
                                <img alt="avatar" src="/img/vk.jpg" class="outer">
                            </a>
                            <input type=url class="accounts-info col col-9" value="vkontacteid">
                        </div>
                        <div class="row">
                            <a href="#" class ="col col-3">
                                <img alt="avatar" src="/img/ok.png" class="outer">
                            </a>
                            <input type=url class="accounts-info col col-9" value="vkontacteid">
                        </div>
                        <div class="row">
                            <a href="#" class ="col col-3">
                                <img alt="avatar" src="/img/mm.png" class="outer">
                            </a>
                            <input type=url class="accounts-info col col-9" value="vkontacteid">
                        </div>
                        <div class="row">
                            <a href="#" class ="col col-3">
                                <img alt="avatar" src="/img/plus.png" class="outer">
                            </a>
                            <input type=url class="accounts-info col col-7" value="vkontacteid" id="outer-url">
                            <button type="button" id="add-outer">
                                Добавить
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <button type="submit" id="submit">
                Сохранить
            </button>
        </div>
    </div>
    <div class="col col-4"></div>
</div>
{% endblock %}
