{% block content %}
<div class="row">
    <div class="col col-4"></div>
    <div class="col col-4">
        <form class="sign-up-form card" onsubmit="return false;" autocomplete="none">
            <h2>SIGN UP</h2>
            <label>
                Name
                <input class="input-regular" id="name" type="text" value="" placeholder="John Smith" required>
                <div class="error-message-small"></div>
            </label>
            <label>
                Login
                <input class="input-regular" id="login" type="text" value="" placeholder="john99" required>
                <div class="error-message-small"></div>
            </label>
            <label>
                Email
                <input class="input-regular" type="text" id="email" value="" placeholder="johnSmith@mail.ru" required>
                <div class="error-message-small"></div>
            </label>
            <label>
                Password
                <input class="input-regular" type="text" id="password" value="" required>
                <div class="error-message-small"></div>
            </label>
            <label>
                Password Confirmation
                <input class="input-regular" type="text" id="password-confirm" value="" required>
                <div class="error-message-small"></div>
            </label>
            <button class="button" type="submit" id="submit">
                Go
            </button>
            <div class="error-message" id="global">
                Signup error
            </div>
        </form>
        <div class="div-center">
            <a class="tiny-ref" href="/login">
                Already registered? Log in.
            </a>
        </div>
    </div>
    <div class="col col-4"></div>
</div>
{% endblock %}
